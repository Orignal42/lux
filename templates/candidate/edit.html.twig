{% extends 'base.html.twig' %}

{% block title %}Edit Candidate{% endblock %}

{% block body %}

{% set fieldCount = 0 %}
        {% for data in dataCandidate %}
            {% if data != null %}
            {% set fieldCount = fieldCount + 1 %}
            {% endif %}
        {% endfor %}
        {% set pourcentageCompleted = fieldCount * 100 / dataLength %}


    <h1></h1>
          <section class="page-title page-title-bg fixed-bg overlay dark-5 padding-top-160 padding-bottom-80">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h2 class="white-text">Your profile</h2>
                        <span class="white-text">Personnal & Professionnal informations</span>
                        <ol class="breadcrumb">
                            <li><a href="#!">Home</a></li>
                            <li class="active">Profile</li>
                        </ol>
                    </div>
                </div>
            </div>
        </section>
        <section class="gray-bg">
            <div class="container">
                <div class="row">
                    <div class="score-container">

       
                    {% if pourcentageCompleted|round == 100 %}

                    <h4>
                        <img src="https://i.imgur.com/s9bPVaK.gif" style="height: 80px; width: 201px;"> &nbsp;
                        &nbsp; Hooray ! Your profile is complete.
                    </h4>
                    <div class="c100 p100 small complete ">
                        <span>100%</span>
                        <div class="slice">
                            <div class="bar"></div>
                            <div class="fill"></div>
                        </div>
                    </div>

                {% else %} 

                     <h4>
                        Incomplete Profile
                    </h4>
                    <div class="c100 p{{ pourcentageCompleted|round }} small complete ">
                        <span>{{ pourcentageCompleted|round }}%</span>
                        <div class="slice">
                            <div class="bar"></div>
                            <div class="fill"></div>
                        </div>
                              <div class="clearfix"></div>
                    </div>
     </div>    
      </div>
           </div>
                {% endif %}

       
          
                    

    {{ include('candidate/_form.html.twig', {'button_label': 'Update'}) }}

                

 





    <a href="{{ path('candidate_index') }}">back to list</a>

    {{ include('candidate/_delete_form.html.twig') }}
{% endblock %}
