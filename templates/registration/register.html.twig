{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>Register</h1>
        <!-- Page Header-->
  
    

{{ form_start(registrationForm, {
             'attr': {'id': 'register-form', 'role': 'form', 'accept-char': 'UTF-8', 'autocomplete': 'off', 'data-parsley-validate': ''}
         }) }}

        <!-- Page Content-->
        <section class="section-padding gray-bg log-section">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12 col-sm-6 col-sm-offset-3 card card-panel">
                        <h3 class="text-extrabold">Create a new account</h3>
                        <form id="register-form" role="form" method="post" accept-char="UTF-8" autocomplete="off" data-parsley-validate>

                            <input type="hidden" name="_token" value="">

                            <div class="input-field">
                                                    
                                {{ form_row(registrationForm.email, {
                                        'attr': {'id': 'email', 'value': '', 'required': '', 'data-parsley-trigger': 'change', 'data-parsley-error-message': 'A valid email address is required.'}
                                    }) }}
                            </div>
                                                    <div class="input-field">
                                                {{ form_row(registrationForm.plainPassword, {
                                    'attr': {'id': 'password', 'value': '', 'required': '', 'data-parsley-trigger': 'change', 'data-parsley-minlength': '6', 'data-parsley-error-message': 'The password must be at least 6 characters."'}
                                }) }}
                            </div>
                                                      
                     <div class="checkbox">

                            <label for="accept-terms">

                            {{ form_widget(registrationForm.agreeTerms, {
                                'attr': {'id': 'accept-terms', 'value': '1', 'required': 'required'}
                            }) }}

                            {{ form_label(registrationForm.agreeTerms, 'I have read and I accept the ', {
                                'label_attr': {'class': 'agreeTerms'}
                            }) }}

                            <span><a href="#!" target="_blank">Terms Of Use</a></span>

                            </label>

                        </div>

                            <button type="submit" class="btn btn-lg gradient secondary btn-block waves-effect waves-light mt-20 mb-20">{{ button_label|default('CREATE AN ACCOUNT') }}</button>
                            
                            <div class="links">
                                <a href="{{path('app_login')}}">Already have an account? Click here</a>
                            </div>
                  
                    </div>

                </div>
            </div>
        </section>

    </div>

</div>







{{ form_end(registrationForm) }}

{% endblock %}